{
  "policy_set_name": "Apple HealthKit Underwriting Rules",
  "version": "1.0.0",
  "effective_date": "2026-01-01",
  "description": "HealthKit data-driven underwriting rules for life and health insurance. HKRS (HealthKit Risk Score) supplements traditional underwriting.",
  
  "scope": {
    "purpose": "Use Apple HealthKit data to supplement traditional underwriting",
    "outputs": ["HealthKit Risk Score (HKRS): 0-100", "Risk Class adjustments"],
    "covered_products": ["Term Life", "Permanent Life (simplified)", "Individual Health", "Critical Illness"],
    "excluded_products": ["Guaranteed Issue", "Group underwriting", "Disability income"]
  },

  "core_principles": [
    "Behavior-based signals matter (activity, sleep, fitness)",
    "Longitudinal trends (90-365 days) > point-in-time snapshots",
    "HealthKit data is additive only (cannot auto-decline)",
    "All automated decisions must be explainable"
  ],

  "consent_requirements": {
    "required_permissions": ["HealthKit data access", "Lookback period access", "Optional ongoing refresh"],
    "default_lookback_months": 12,
    "data_handling": {
      "access_type": "read-only",
      "raw_data_retention": "underwriting window only",
      "aggregated_metrics_retained": true,
      "compliance_standards": ["HIPAA", "PHIPA", "GDPR"]
    }
  },

  "data_categories": {
    "included": {
      "activity": {
        "metrics": ["steps_per_day", "active_energy_burned"],
        "description": "Daily activity levels and energy expenditure"
      },
      "fitness": {
        "metrics": ["vo2_max"],
        "description": "Cardiorespiratory fitness capacity"
      },
      "vitals": {
        "metrics": ["resting_heart_rate", "heart_rate_variability"],
        "description": "Heart health indicators"
      },
      "sleep": {
        "metrics": ["sleep_duration", "sleep_consistency"],
        "description": "Sleep quantity and regularity"
      },
      "body_metrics": {
        "metrics": ["weight_trend", "bmi_trend"],
        "description": "Body composition trends over time"
      },
      "mobility": {
        "metrics": ["walking_speed", "walking_steadiness"],
        "description": "Movement quality and stability indicators"
      },
      "exercise": {
        "metrics": ["workout_frequency", "workout_intensity"],
        "description": "Structured exercise patterns"
      }
    },
    "excluded": ["reproductive_health", "mental_health_notes", "gps_location_data"]
  },

  "data_quality_requirements": {
    "minimum_coverage": {
      "steps": {
        "min_days": 120,
        "lookback_months": 12
      },
      "sleep": {
        "min_days": 90,
        "lookback_months": 6
      },
      "vo2_max": {
        "min_readings": 3,
        "lookback_months": 12
      },
      "heart_rate": {
        "min_days": 60,
        "lookback_months": 6
      }
    },
    "data_quality_score": {
      "high": {
        "threshold": 80,
        "description": ">=80% completeness",
        "action": "eligible_for_automation"
      },
      "medium": {
        "threshold": 50,
        "description": "50-79% completeness",
        "action": "standard_processing"
      },
      "low": {
        "threshold": 0,
        "description": "<50% completeness",
        "action": "manual_review_required"
      }
    }
  },

  "age_adjustment_factor": {
    "description": "Age is a normalization factor, not a penalty. Prevents penalizing healthy older applicants.",
    "applies_to": ["vo2_max", "resting_hr", "hrv", "walking_speed", "recovery_metrics"],
    "factors": {
      "18-34": 1.00,
      "35-44": 0.98,
      "45-54": 0.95,
      "55-64": 0.92,
      "65+": 0.88
    }
  },

  "hkrs_formula": {
    "description": "HealthKit Risk Score = (Σ weighted sub-scores) × Age Adjustment Factor",
    "max_score": 100,
    "components": [
      {"name": "activity_score", "weight": 0.25, "max_points": 25},
      {"name": "vo2_max_score", "weight": 0.20, "max_points": 20},
      {"name": "heart_health_score", "weight": 0.20, "max_points": 20},
      {"name": "sleep_health_score", "weight": 0.15, "max_points": 15},
      {"name": "body_composition_score", "weight": 0.10, "max_points": 10},
      {"name": "mobility_score", "weight": 0.10, "max_points": 10}
    ]
  },

  "sub_scores": {
    "activity_score": {
      "name": "Activity Score",
      "category": "activity",
      "weight": 0.25,
      "max_points": 25,
      "description": "Measures daily physical activity levels based on step count. Higher daily steps indicate better cardiovascular health and lower mortality risk. Includes trend analysis to reward improving activity patterns.",
      "criteria": [
        {"id": "ACT-001", "condition": "Steps per day > 8,000", "points": 25, "rationale": "Excellent activity level associated with significantly reduced all-cause mortality"},
        {"id": "ACT-002", "condition": "Steps per day 6,000-7,999", "points": 18, "rationale": "Good activity level meeting most health guidelines"},
        {"id": "ACT-003", "condition": "Steps per day 4,000-5,999", "points": 10, "rationale": "Moderate activity level; room for improvement"},
        {"id": "ACT-004", "condition": "Steps per day < 4,000", "points": 0, "rationale": "Low activity level associated with increased health risks"},
        {"id": "ACT-005", "condition": "Upward trend over 6 months", "points": 3, "rationale": "Improving activity pattern indicates positive lifestyle change"},
        {"id": "ACT-006", "condition": "Stable trend over 6 months", "points": 0, "rationale": "Consistent activity level maintained"},
        {"id": "ACT-007", "condition": "Declining trend over 6 months", "points": -3, "rationale": "Decreasing activity may indicate health concerns or lifestyle changes"}
      ],
      "calculation": {
        "steps_per_day": {
          ">8000": 25,
          "6000-7999": 18,
          "4000-5999": 10,
          "<4000": 0
        },
        "trend_modifier": {
          "upward_6mo": 3,
          "stable": 0,
          "declining_6mo": -3
        }
      }
    },
    "vo2_max_score": {
      "name": "VO2 Max Score",
      "category": "fitness",
      "weight": 0.20,
      "max_points": 20,
      "description": "Cardiorespiratory fitness capacity measured by VO2 max. This is one of the strongest predictors of longevity. Values are age and sex normalized to ensure fair comparison across demographics.",
      "criteria": [
        {"id": "VO2-001", "condition": "VO2 max ≥ 75th percentile (age/sex adjusted)", "points": 20, "rationale": "Superior cardiovascular fitness strongly correlated with longevity"},
        {"id": "VO2-002", "condition": "VO2 max 50th-74th percentile (age/sex adjusted)", "points": 15, "rationale": "Above average cardiovascular fitness"},
        {"id": "VO2-003", "condition": "VO2 max 25th-49th percentile (age/sex adjusted)", "points": 8, "rationale": "Average cardiovascular fitness for age group"},
        {"id": "VO2-004", "condition": "VO2 max < 25th percentile (age/sex adjusted)", "points": 0, "rationale": "Below average cardiovascular fitness; increased health risk"}
      ],
      "calculation": {
        "percentile": {
          ">=75": 20,
          "50-74": 15,
          "25-49": 8,
          "<25": 0
        }
      },
      "normalization": "age_and_sex_adjusted"
    },
    "heart_health_score": {
      "name": "Heart Health Score",
      "category": "vitals",
      "weight": 0.20,
      "max_points": 20,
      "description": "Evaluates cardiovascular health through resting heart rate and heart rate variability (HRV). Lower resting HR and higher HRV indicate better autonomic nervous system function and cardiac efficiency.",
      "criteria": [
        {"id": "HRT-001", "condition": "Resting heart rate 50-70 bpm", "points": 10, "rationale": "Optimal resting heart rate indicating good cardiac efficiency"},
        {"id": "HRT-002", "condition": "Resting heart rate 71-75 bpm", "points": 7, "rationale": "Slightly elevated but within acceptable range"},
        {"id": "HRT-003", "condition": "Resting heart rate 76-80 bpm", "points": 4, "rationale": "Elevated resting heart rate; moderate concern"},
        {"id": "HRT-004", "condition": "Resting heart rate > 80 bpm", "points": 0, "rationale": "High resting heart rate associated with increased cardiovascular risk"},
        {"id": "HRT-005", "condition": "Resting heart rate < 50 bpm", "points": 5, "rationale": "Athletic bradycardia or potential concern; partial credit"},
        {"id": "HRT-006", "condition": "HRV ≥ 60th percentile (age-normalized)", "points": 10, "rationale": "Excellent heart rate variability indicating strong parasympathetic function"},
        {"id": "HRT-007", "condition": "HRV 40th-59th percentile (age-normalized)", "points": 6, "rationale": "Average heart rate variability"},
        {"id": "HRT-008", "condition": "HRV < 40th percentile (age-normalized)", "points": 0, "rationale": "Low HRV associated with increased mortality risk"}
      ],
      "calculation": {
        "resting_hr": {
          "preferred_range_bpm": [50, 70],
          "max_points": 10,
          "scoring": {
            "50-70": 10,
            "71-75": 7,
            "76-80": 4,
            ">80": 0,
            "<50": 5
          }
        },
        "hrv": {
          "threshold": "age-normalized 60th percentile",
          "max_points": 10,
          "scoring": {
            ">=60th_percentile": 10,
            "40th-59th_percentile": 6,
            "<40th_percentile": 0
          }
        }
      },
      "partial_credit": true
    },
    "sleep_health_score": {
      "name": "Sleep Health Score",
      "category": "sleep",
      "weight": 0.15,
      "max_points": 15,
      "description": "Assesses sleep quantity and consistency. Quality sleep of 7-8 hours with regular timing is associated with better health outcomes, cognitive function, and reduced mortality risk.",
      "criteria": [
        {"id": "SLP-001", "condition": "Average sleep duration 7-8 hours", "points": 10, "rationale": "Optimal sleep duration per sleep medicine guidelines"},
        {"id": "SLP-002", "condition": "Average sleep duration 6-6.9 hours", "points": 6, "rationale": "Slightly below optimal; adequate for most adults"},
        {"id": "SLP-003", "condition": "Average sleep duration 8.1-9 hours", "points": 6, "rationale": "Slightly above optimal; generally acceptable"},
        {"id": "SLP-004", "condition": "Average sleep duration < 6 hours", "points": 0, "rationale": "Insufficient sleep associated with multiple health risks"},
        {"id": "SLP-005", "condition": "Average sleep duration > 9 hours", "points": 3, "rationale": "Excessive sleep may indicate underlying health issues"},
        {"id": "SLP-006", "condition": "Sleep timing variance within 1 hour", "points": 5, "rationale": "Consistent sleep schedule supports circadian rhythm health"},
        {"id": "SLP-007", "condition": "Sleep timing variance 1-2 hours", "points": 3, "rationale": "Moderate sleep schedule variability"},
        {"id": "SLP-008", "condition": "Sleep timing variance > 2 hours", "points": 0, "rationale": "Irregular sleep patterns associated with health risks"}
      ],
      "calculation": {
        "duration": {
          "optimal_hours": [7, 8],
          "max_points": 10,
          "scoring": {
            "7-8": 10,
            "6-6.9": 6,
            "8.1-9": 6,
            "<6": 0,
            ">9": 3
          }
        },
        "consistency": {
          "threshold_hours": 1,
          "max_points": 5,
          "scoring": {
            "within_1_hour": 5,
            "1-2_hours_variance": 3,
            ">2_hours_variance": 0
          }
        }
      }
    },
    "body_composition_score": {
      "name": "Body Composition Score",
      "category": "body_metrics",
      "weight": 0.10,
      "max_points": 10,
      "description": "Tracks weight and BMI trends over time. Stable or improving body composition indicates healthy lifestyle maintenance. Focus is on trends rather than absolute values to avoid penalizing healthy individuals.",
      "criteria": [
        {"id": "BDY-001", "condition": "Weight/BMI stable or improving (within ±2%)", "points": 10, "rationale": "Stable body composition indicates consistent healthy habits"},
        {"id": "BDY-002", "condition": "Weight/BMI mild increase (2-5%)", "points": 5, "rationale": "Minor weight gain; monitoring recommended"},
        {"id": "BDY-003", "condition": "Weight/BMI significant increase (> 5%)", "points": 0, "rationale": "Notable weight gain may indicate lifestyle or health changes"}
      ],
      "calculation": {
        "bmi_or_weight_trend": {
          "stable_or_improving": 10,
          "mild_increase": 5,
          "significant_increase": 0
        },
        "thresholds": {
          "stable": "change within +/- 2%",
          "mild_increase": "2-5% increase",
          "significant_increase": ">5% increase"
        }
      }
    },
    "mobility_score": {
      "name": "Mobility Score",
      "category": "mobility",
      "weight": 0.10,
      "max_points": 10,
      "description": "Evaluates movement quality through walking speed and steadiness. These metrics are strong predictors of functional health and fall risk, particularly important for longevity assessment.",
      "criteria": [
        {"id": "MOB-001", "condition": "Walking speed > 60th percentile (age-adjusted)", "points": 5, "rationale": "Above average walking speed indicates good functional mobility"},
        {"id": "MOB-002", "condition": "Walking speed 40th-60th percentile (age-adjusted)", "points": 3, "rationale": "Average walking speed for age group"},
        {"id": "MOB-003", "condition": "Walking speed < 40th percentile (age-adjusted)", "points": 0, "rationale": "Below average walking speed may indicate mobility concerns"},
        {"id": "MOB-004", "condition": "Walking steadiness: Normal", "points": 5, "rationale": "Stable gait with low fall risk"},
        {"id": "MOB-005", "condition": "Walking steadiness: Slightly unsteady", "points": 2, "rationale": "Minor balance concerns; moderate fall risk"},
        {"id": "MOB-006", "condition": "Walking steadiness: Unsteady", "points": 0, "rationale": "Significant balance issues; elevated fall risk"}
      ],
      "calculation": {
        "walking_speed": {
          "threshold": "age 60th percentile",
          "max_points": 5,
          "scoring": {
            ">60th_percentile": 5,
            "40th-60th_percentile": 3,
            "<40th_percentile": 0
          }
        },
        "steadiness": {
          "max_points": 5,
          "scoring": {
            "normal": 5,
            "slightly_unsteady": 2,
            "unsteady": 0
          }
        }
      }
    }
  },

  "hkrs_bands": {
    "excellent": {
      "range": [85, 100],
      "description": "Excellent health signals",
      "action": "eligible_for_best_class"
    },
    "very_good": {
      "range": [70, 84],
      "description": "Very good health signals",
      "action": "improve_one_class_max"
    },
    "standard_plus": {
      "range": [55, 69],
      "description": "Standard Plus health signals",
      "action": "standard_processing"
    },
    "standard": {
      "range": [40, 54],
      "description": "Standard health signals",
      "action": "no_adjustment"
    },
    "substandard": {
      "range": [0, 39],
      "description": "Substandard / requires manual review",
      "action": "manual_review_required"
    }
  },

  "traditional_underwriting_interaction": {
    "never_replaces": ["Medical questionnaires", "APS/labs", "MIB checks"],
    "adjustment_rules": {
      "hkrs_85_plus": {
        "condition": "hkrs >= 85",
        "action": "eligible_for_best_class_if_traditional_aligns"
      },
      "hkrs_70_84": {
        "condition": "70 <= hkrs < 85",
        "action": "improve_one_class_max"
      },
      "hkrs_below_55": {
        "condition": "hkrs < 55",
        "action": "no_positive_adjustment"
      }
    }
  },

  "risk_class_mapping": {
    "preferred_plus": {
      "hkrs_threshold": 85,
      "traditional_required": true,
      "description": "HKRS >= 85 AND traditional underwriting qualifies"
    },
    "preferred": {
      "hkrs_threshold": 70,
      "upgrade_eligible": "preferred_plus if hkrs >= 85",
      "description": "HKRS >= 70 may upgrade to Preferred Plus"
    },
    "standard_plus": {
      "hkrs_threshold": 55,
      "description": "HKRS 55-69"
    },
    "standard": {
      "hkrs_threshold": 40,
      "no_upgrade_if_hkrs_below": 55,
      "description": "HKRS 40-54, remains Standard if < 55"
    },
    "substandard": {
      "hkrs_threshold": 0,
      "action": "manual_review",
      "description": "HKRS < 40"
    }
  },

  "health_insurance_modifiers": {
    "wellness_discount": {
      "max_percentage": 10,
      "hkrs_threshold": 70,
      "description": "Up to 10% wellness discount for HKRS >= 70"
    },
    "deductible_eligibility": {
      "high_hkrs_benefit": "eligible_for_lower_deductible",
      "hkrs_threshold": 75
    },
    "annual_re_rating": {
      "opt_in_required": true,
      "frequency": "annual"
    }
  },

  "automation_rules": {
    "auto_underwrite_eligible": {
      "conditions": {
        "hkrs_minimum": 70,
        "data_quality": "high",
        "no_traditional_red_flags": true
      }
    },
    "manual_review_triggers": [
      "rapid_activity_decline",
      "rapid_sleep_decline",
      "hrv_deterioration_over_20_percent",
      "sparse_or_inconsistent_data",
      "data_quality_low"
    ]
  },

  "explainability_requirements": {
    "applicant_must_receive": [
      "Summary scorecard",
      "Top 3 positive drivers",
      "Improvement suggestions (non-medical language)"
    ],
    "example_output": "Your strong activity level and consistent sleep positively influenced your rating."
  },

  "ongoing_monitoring": {
    "opt_in_required": true,
    "frequency": "quarterly",
    "adjustment_type": "rewards_only",
    "no_penalties": true,
    "opt_out_anytime": true
  },

  "governance": {
    "validation_frequency": "annual",
    "requirements": [
      "Actuarial validation",
      "Bias testing (age & gender)",
      "Medical advisory sign-off",
      "Full regulatory audit trail"
    ]
  }
}
